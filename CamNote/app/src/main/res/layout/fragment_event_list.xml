<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventListFragment">

    <ListView
        android:id="@+id/list_view_events"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/camera_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_action_add"
        android:layout_alignBottom="@+id/list_view_events"
        android:layout_alignRight="@+id/list_view_events"
        fab:fab_colorNormal="@color/blue"
        fab:fab_colorPressed="@color/pressed"
        fab:fab_colorRipple="@color/ripple" />

</RelativeLayout>